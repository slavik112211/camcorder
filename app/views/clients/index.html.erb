<div class="content-wrapper">
  <p id="notice"><%= notice %></p>

  <table class='table clients'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr> 
          <td><%= (client.first_name || "") + " " + (client.last_name || "") %></td>
          <td><%= client.email %></td>
          <td>
          <%= link_to 'Record video!', camcorder_client_path(client), {class: 'bigBtn'} %>
          <%= link_to 'Edit', edit_client_path(client), {class: 'bigBtn'} %>
          <%= link_to 'Delete', client, method: :delete, data: { confirm: 'Are you sure?' }, class: 'bigBtn' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="table-footer">
    <%= link_to 'New Client', new_client_path, {class: 'bigBtn new-client'} %>
    <%= paginate @clients %>
  </div>
</div>

<br>


