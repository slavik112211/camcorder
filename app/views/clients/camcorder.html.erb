<div class="content-wrapper video">
  <object id="camcorder" width="640px" height="360px"
    codebase="http://fpdownload.macromedia.com/get/flashplayer/current/swflash.cab">
    <param name="movie" value="/red5recorder.swf" />
    <param name="quality" value="high" />
    <param name="bgcolor" value="#869ca7" />
    <param name="allowScriptAccess" value="sameDomain" />
    <embed src="/red5recorder.swf" quality="high" bgcolor="#869ca7"
      width="640" height="360" name="red5recorder" align="middle"
      play="true"
      loop="false"
      allowScriptAccess="sameDomain"
      type="application/x-shockwave-flash"
      pluginspage="http://www.adobe.com/go/getflashplayer">
    </embed>
  </object>

