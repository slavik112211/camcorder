<!DOCTYPE html>
<html>
<head>
  <title>Camcorder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

  <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>

  <script src="//ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js"></script>
  <%= javascript_include_tag 'scriptcam.min' %>

  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <div class="navbar-brand">Camcorder</div>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li data-controller='clients'><a href="/clients">Clients</a></li>
          <li data-controller='videos'><a href="/videos">Videos</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="jumbotron">
    <%= yield %>
  </div>

</div>

<script type="text/javascript">
  $(function() {
    var controllerName = "<%= controller.controller_name %>";
    $("nav ul.nav li").each(function(index){
      if($(this).data("controller") == controllerName) $(this).addClass("active");
    });
  });
</script>

</body>
</html>